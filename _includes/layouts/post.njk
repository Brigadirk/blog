---
layout: layouts/base.njk
section: post
---

<article>

  <h1>{{ title }}</h1>
  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time> by <a href="/authors/{{ author | slug }}/">{{ author }}</a>
    </small>
  </p>

  {{ layoutContent | safe }}

</article>

<nav>
  <a href="{{ '/blog/' | url }}">← Blog index</a>
</nav>
